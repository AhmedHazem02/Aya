# ===== Environment Variables - مركز المهارات =====
# انسخ هذا الملف وسميه .env وضع فيه القيم الحقيقية

# API URL الخاص بالـ Backend
VITE_API_BASE_URL=http://localhost:8000/api

# اسم التطبيق (اختياري)
VITE_APP_NAME=مركز المهارات

# وضع التطوير — true = بيانات وهمية بدون backend | false = الباك الحقيقي
VITE_MOCK_MODE=true
